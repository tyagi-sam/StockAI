# Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_USER=stock_ai_user
POSTGRES_PASSWORD=your_strong_postgres_password_here
DATABASE_URL=postgresql://stock_ai_user:your_strong_postgres_password_here@postgres:5432/stock_ai

# Redis Configuration
REDIS_PASSWORD=your_strong_redis_password_here
REDIS_URL=redis://:your_strong_redis_password_here@redis:6379

# Security (REQUIRED - Generate strong values)
JWT_SECRET=your_very_long_jwt_secret_key_here_make_it_at_least_32_characters_long_and_random
FERNET_KEY=your_base64_encoded_32_byte_fernet_key_here_generate_with_python_cryptography

# Google OAuth (REQUIRED)
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here

# Zerodha API (REQUIRED)
ZERODHA_API_KEY=your_zerodha_api_key_here
ZERODHA_API_SECRET=your_zerodha_api_secret_here

# OpenAI API (Optional - for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration - Zoho Mail (Recommended)
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourdomain.com
SMTP_PASSWORD=your_zoho_email_password
SMTP_TLS=true
SMTP_SSL=false
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=StockAI
REPLY_TO_EMAIL=support@yourdomain.com

# Alternative Email Configurations:
# Gmail (Personal - not recommended for production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_TLS=true
# SMTP_SSL=false
# FROM_EMAIL=your_email@gmail.com
# FROM_NAME=StockAI

# SendGrid (For high volume)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your_sendgrid_api_key
# SMTP_TLS=true
# SMTP_SSL=false
# FROM_EMAIL=noreply@yourdomain.com
# FROM_NAME=StockAI
# REPLY_TO_EMAIL=support@yourdomain.com

# Amazon SES (Cost-effective for high volume)
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USERNAME=your_ses_smtp_username
# SMTP_PASSWORD=your_ses_smtp_password
# SMTP_TLS=true
# SMTP_SSL=false
# FROM_EMAIL=noreply@yourdomain.com
# FROM_NAME=StockAI

# OTP Configuration
OTP_EXPIRE_MINUTES=10
OTP_LENGTH=6

# Environment
ENVIRONMENT=production

# CORS Origins (comma-separated - use your actual domain)
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend URL (use your actual domain)
FRONTEND_URL=https://yourdomain.com

# WebSocket URL (use your actual domain)
WS_URL=wss://yourdomain.com
NEXT_PUBLIC_WS_URL=wss://yourdomain.com 