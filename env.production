# Production Environment Configuration for stock-satta.online
# Copy this file to .env on your EC2 instance and fill in your actual values

# Database Configuration
POSTGRES_USER=stock_ai_user
POSTGRES_PASSWORD=YOUR_STRONG_POSTGRES_PASSWORD_HERE
DATABASE_URL=postgresql://stock_ai_user:YOUR_STRONG_POSTGRES_PASSWORD_HERE@postgres:5432/stock_ai

# Redis Configuration
REDIS_PASSWORD=YOUR_STRONG_REDIS_PASSWORD_HERE
REDIS_URL=redis://:YOUR_STRONG_REDIS_PASSWORD_HERE@redis:6379

# Security (REQUIRED - Generate strong values)
JWT_SECRET=YOUR_VERY_LONG_JWT_SECRET_KEY_HERE_MAKE_IT_AT_LEAST_32_CHARACTERS_LONG_AND_RANDOM
FERNET_KEY=YOUR_BASE64_ENCODED_32_BYTE_FERNET_KEY_HERE

# Google OAuth (REQUIRED)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_OAUTH_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_OAUTH_CLIENT_SECRET_HERE

# Zerodha API (REQUIRED)
ZERODHA_API_KEY=YOUR_ZERODHA_API_KEY_HERE
ZERODHA_API_SECRET=YOUR_ZERODHA_API_SECRET_HERE

# OpenAI API (Optional - for AI analysis)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Email Configuration - SendGrid
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY_HERE
SMTP_TLS=true
SMTP_SSL=false
FROM_EMAIL=noreply@stock-satta.online
FROM_NAME=StockAI
REPLY_TO_EMAIL=support@stock-satta.online

# OTP Configuration
OTP_EXPIRE_MINUTES=10
OTP_LENGTH=6

# Environment
ENVIRONMENT=production

# CORS Origins (comma-separated - using your domain)
BACKEND_CORS_ORIGINS=https://stock-satta.online,https://www.stock-satta.online,https://api.stock-satta.online

# Frontend URL (using your domain)
FRONTEND_URL=https://stock-satta.online

# WebSocket URL (using your domain)
WS_URL=wss://stock-satta.online
NEXT_PUBLIC_WS_URL=wss://stock-satta.online 