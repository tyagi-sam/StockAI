# Database Configuration
DATABASE_URL=postgresql://stock_ai_user:stock_ai_password@localhost:5432/stock_ai

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Google OAuth Configuration (for user authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Zerodha API Configuration (for stock data - public market data)
ZERODHA_API_KEY=your_zerodha_api_key
ZERODHA_API_SECRET=your_zerodha_api_secret

# OpenAI Configuration (optional - for AI analysis)
OPENAI_API_KEY=your_openai_api_key

# Encryption Key (generate with: python -c "import base64; print(base64.b64encode(b'your-32-byte-key-here').decode())")
FERNET_KEY=your_base64_encoded_32_byte_key

# Frontend URL
FRONTEND_URL=http://localhost:3000

# WebSocket URLs
WS_URL=ws://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# CORS Origins
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://frontend:3000

# Environment
ENVIRONMENT=development 